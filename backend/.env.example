# 伺服器設定
PORT=3001
NODE_ENV=development
DATABASE_PATH=./database.sqlite
FRONTEND_URL=http://localhost:3000

# JWT 認證
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRES_IN=7d

# API 速率限制（可選）
# 短期限制：每分鐘最多請求數
THROTTLE_LIMIT_SHORT=60
# 長期限制：每小時最多請求數
THROTTLE_LIMIT_LONG=1000

# Line Notify（可選）
# 取得方式：https://notify-bot.line.me/my/
LINE_NOTIFY_CLIENT_ID=
LINE_NOTIFY_CLIENT_SECRET=
LINE_NOTIFY_REDIRECT_URI=http://localhost:3001/notifications/line-notify/callback

# Web Push VAPID 金鑰（可選）
# 產生方式：npx web-push generate-vapid-keys
VAPID_SUBJECT=mailto:admin@example.com
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=

# Telegram Bot（可選）
# 取得方式：透過 @BotFather 建立 Bot
TELEGRAM_BOT_TOKEN=
