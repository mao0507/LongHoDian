# 伺服器設定
PORT=3001
DATABASE_PATH=./database.sqlite
FRONTEND_URL=http://localhost:3000

# JWT 認證
JWT_SECRET=your-jwt-secret-here

# Line Notify（可選）
# 取得方式：https://notify-bot.line.me/my/
LINE_NOTIFY_CLIENT_ID=
LINE_NOTIFY_CLIENT_SECRET=
LINE_NOTIFY_REDIRECT_URI=http://localhost:3001/api/notifications/line-notify/callback

# Web Push VAPID 金鑰（可選）
# 產生方式：npx web-push generate-vapid-keys
VAPID_SUBJECT=mailto:admin@example.com
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=

# Telegram Bot（可選）
# 取得方式：透過 @BotFather 建立 Bot
TELEGRAM_BOT_TOKEN=
